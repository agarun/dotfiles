[user]
	name = Aaron Agarunov
	email = agarunov.aaron@gmail.com

[alias]
	co = checkout
	cob = checkout -b
	cp = cherry-pick
	unstage = reset HEAD

	l = log --pretty=oneline --graph --abbrev-commit
	l2 = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --graph --abbrev-commit
	lb = log --all --graph --decorate --oneline --simplify-by-decoration

	# List contributors with number of commits
	contributors = shortlog --summary --numbered

	# Interactive rebase with the given number of latest commits
	reb = "!r() { git rebase -i HEAD~$1; }; r"

	# List aliases
	aliases = config --get-regexp alias

	# Show verbose output about tags, branches or remotes
	tags = tag -l
	branches = branch -a
	branchbros = for-each-ref --sort=-committerdate --format="%(color:blue)%(authordate:relative) %(color:red)%(authorname) %(color:white)%(color:bold)%(refname:short)" refs/remotes
	remotes = remote -v

[apply]
	# Detect whitespace errors when applying a patch
	whitespace = fix

[status]
	branch = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

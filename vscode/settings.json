{
  "atomKeymap.promptV3Features": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.formatOnSave": true,
  "[typescript][typescriptreact][javascript][javascriptreact][json][jsonc][html][css][scss][markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "editor.minimap.enabled": false,
  "editor.guides.bracketPairs": "active",
  "editor.renderWhitespace": "boundary",
  "editor.renderIndentGuides": true,
  "editor.renderControlCharacters": true,
  "editor.fontFamily": "'JetBrains Mono', monospace, 'Apple Color Emoji'",
  "[plaintext][markdown][json]": {
    "editor.fontFamily": "'Fantasque Sans Mono', monospace, 'Apple Color Emoji'"
  },
  "markdown.preview.fontFamily": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, sans-serif",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.gotoLocation.multipleDefinitions": "goto", // fast jump-to-definition
  "prettier.singleQuote": true,
  "window.zoomLevel": 2,
  "eslint.alwaysShowStatus": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.pyc": true
  },
  "workbench.colorTheme": "Night Owl (No Italics)",
  "workbench.activityBar.visible": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "git.confirmSync": false,
  "telemetry.telemetryLevel": "off",
  "editor.stickyScroll.enabled": true // settings to try out, love or hate
}
